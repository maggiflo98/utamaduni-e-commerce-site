<div class="bg-img">
    <div class="col col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
    <div class="col col-sm-3 col-md-3 col-lg-3 col-xl-3">
        <form action="/products/update" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="">username</label>
                <input type="text" name="user_name" class="form-control" value={{name}}>
            </div>
            <div class="form-group">
                <label for="">Type of product</label>
                <input type="type" name="type" class="form-control" value={{type}}>
            </div>
            <div class="form-group">
                <label for="">Price</label>
                <input type="price" name="price" class="form-control" value="{{price}}">
            </div>
            <div class="form-group">
                <label for="">select image</label>
                <input type="file" name="productImg" class="form-control" value="{{image}}">
            </div>
            <div class="form-group">
                <label for="">Describe your item</label>
                <input type="text" name="description" class="form-control" value="{{description}}">
            </div>

            <div class="form-group">
                <label for="">sellers name</label>
                <input type="text" name="sellerName" class="form-control" value="{{seller}}">
            </div>
            <input type="hidden" name="productId" value={{id}}>

            <input type="submit" class="btn btn-info btn-block">submit</input>

        </form>
    </div>
    <div class="col col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
</div>

