

    <div class="row">
        {{#if products}}
            {{#each products}}
                <div class="col col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <div class="card" style="height: 350px">
                        <a href="/products/{{this.id}}" >
                            <img src="/{{this.image}}" alt="" class="img-thumbnail" style="height: 250px;width: 100%">
                            <div class="card-body">
                                <p>{{this.productsname}}</p>
                                Seller{{this.name}}
                                <p class="lead">{{this.seller}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {{/each}}

        {{else}}
            <p>no products</p>
        {{/if}}















